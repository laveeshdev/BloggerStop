<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home</title>
    <style>
      .card-img-top {
        width: 100%;
        height: 200px; /* Set a fixed height for all images */
        object-fit: cover; /* Ensures the image scales proportionally and fills the area */
        border-radius: 8px;
      }
      .card {
        margin-bottom: 20px; /* Add spacing between cards */
      }
    </style>
  </head>

  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-md-3">
          <!-- Each blog takes 1/4th of the row -->
          <div class="card">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="Blog Cover Image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p
                class="card-text text-truncate"
                style="max-height: 60px; overflow: hidden"
              >
                <%= blog.body %>
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
